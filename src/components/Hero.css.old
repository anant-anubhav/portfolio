.hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    padding: var(--spacing-lg);
    position: relative;
    text-align: center;
    overflow: hidden;
}

.hero-content {
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    animation: fadeIn 1s ease-out;
}

.logo-container {
    margin-bottom: var(--spacing-md);
}

.hero-logo {
    width: 150px;
    height: auto;
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
    animation: float 6s ease-in-out infinite;
}

.hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0;
    background: var(--gradient-main);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    /* Fallback */
}

.hero-subtitle {
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--text-secondary);
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: var(--spacing-md);
}

.hero-value-prop {
    font-size: 1.25rem;
    color: var(--text-primary);
    opacity: 0.9;
    margin-bottom: var(--spacing-xl);
    max-width: 600px;
}

.hero-cta-group {
    display: flex;
    gap: var(--spacing-md);
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
    font-size: 1rem;
}

.btn-primary {
    background: var(--gradient-main);
    color: white;
    box-shadow: 0 4px 15px rgba(0, 128, 128, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 128, 128, 0.4);
    color: white;
}

.btn-secondary {
    background: transparent;
    border: 2px solid var(--primary-teal);
    color: var(--primary-teal);
}

.btn-secondary:hover {
    background: rgba(0, 128, 128, 0.05);
    transform: translateY(-2px);
}

/* Background Elements */
.network-node {
    position: absolute;
    border-radius: 50%;
    background: var(--gradient-accent);
    opacity: 0.1;
    filter: blur(40px);
}

.node-1 {
    width: 300px;
    height: 300px;
    top: -50px;
    left: -50px;
}

.node-2 {
    width: 400px;
    height: 400px;
    bottom: -100px;
    right: -100px;
}

.node-3 {
    width: 150px;
    height: 150px;
    top: 40%;
    right: 15%;
}

/* Animations */
@keyframes float {
    0% {
        transform: translateY(0px);
    }

    50% {
        transform: translateY(-10px);
    }

    100% {
        transform: translateY(0px);
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@media (max-width: 768px) {
    .hero-title {
        font-size: 2.25rem;
    }

    .hero-subtitle {
        font-size: 1.1rem;
    }

    .hero-cta-group {
        flex-direction: column;
        width: 100%;
        max-width: 300px;
    }

    .btn {
        justify-content: center;
    }
}