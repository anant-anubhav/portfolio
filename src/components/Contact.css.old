.contact-section {
    padding: var(--spacing-xl) var(--spacing-md) var(--spacing-lg);
    background-color: #f8fcfc;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
}

.contact-content {
    display: flex;
    flex-wrap: wrap;
    gap: 4rem;
    margin-top: 3rem;
    justify-content: center;
}

.contact-info,
.contact-form {
    flex: 1;
    min-width: 300px;
    max-width: 500px;
}

.contact-subtitle {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
}

.contact-desc {
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-size: 1.05rem;
    line-height: 1.7;
}

.social-links {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
}

.social-link {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 1rem;
    color: var(--text-primary);
    padding: 1rem;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.03);
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.03);
}

.social-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 128, 128, 0.1);
    color: var(--primary-teal);
    border-color: rgba(0, 128, 128, 0.1);
}

/* Form Styles */
.contact-form {
    background: white;
    padding: 2.5rem;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-primary);
    font-size: 0.95rem;
}

.form-input,
.form-textarea {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    font-family: inherit;
    font-size: 1rem;
    transition: border-color 0.2s;
    background-color: #f8fafc;
}

.form-input:focus,
.form-textarea:focus {
    outline: none;
    border-color: var(--primary-teal);
    background-color: white;
    box-shadow: 0 0 0 3px rgba(0, 128, 128, 0.1);
}

.form-textarea {
    resize: vertical;
}

.submit-btn {
    width: 100%;
    justify-content: center;
    margin-top: 1rem;
}

.footer-copyright {
    text-align: center;
    margin-top: 5rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    opacity: 0.7;
}

@media (max-width: 768px) {
    .contact-content {
        gap: 3rem;
    }

    .contact-form {
        padding: 1.5rem;
    }
}